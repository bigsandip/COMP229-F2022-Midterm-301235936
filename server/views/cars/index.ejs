<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Favourite Cars List</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/cars/add" class="btn btn-primary"
        ><i class="fa fa-plus"></i> Add a car</a
      >
      <br />
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Car Name</th>
              <th class="text-center">Car Model</th>
              <th class="text-center">Category</th>
              <th class="text-center">Price</th>
              <th class="text-center"></th>
              </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < CarList.length; count++) { %>
            <tr>
              <td><%= CarList[count].Carname %></td>

              <td class="text-center"><%= CarList[count].Category %></td>
              <td class="text-center"><%= CarList[count].Carmodel %></td>
              <td class="text-center"><%= CarList[count].Price %></td>

              <td class="text-center">
                <a href="/cars/edit/<%= CarList[count]._id %>" class="btn btn-success btn-sm">
                  <i class="fas fa-trash"></i> Edit</a>
              </td>

              <td class="text-center">
                <a href="/cars/delete/<%= CarList[count]._id %>" class="btn btn-danger btn-sm">
                  <i class="fas fa-trash"></i> Delete</a>
              </td>
             
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
      
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
